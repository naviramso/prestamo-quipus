<div class="max-w-2xl mx-auto">
    <div class="bg-white p-6 rounded-lg shadow-sm border">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h2 class="text-xl font-semibold text-gray-800">Registrar Nuevo Quipus</h2>
                <p class="text-gray-600 text-sm">Agregar nuevo equipo al sistema</p>
            </div>
            <a href="/admin/quipus/lista"
                class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                ← Volver a la lista
            </a>
        </div>

        <form id="form-quipus" class="space-y-6">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-blue-800">Información importante</h3>
                        <div class="mt-2 text-sm text-blue-700">
                            <p>• El código debe ser único para cada equipo</p>
                            <p>• Use un formato consistente (ej: 4XXXX)</p>
                            <p>• El estado inicial será "disponible" automáticamente</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-1 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Código del Quipus *
                    </label>
                    <input type="text" id="codigo" required placeholder="Ej: 41234" pattern="[0-9]+"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-colors"
                        title="Solo números, sin texto" maxlength="5" autofocus>
                    <p class="text-xs text-gray-500 mt-1">Solo números, sin texto</p>
                </div>
            </div>

            <div class="flex space-x-4">
                <button type="submit"
                    class="bg-red-600 hover:bg-red-700 text-white py-2 px-6 rounded-md font-medium transition-colors flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    Registrar Quipus
                </button>

                <button type="button" onclick="window.location.href='/admin/quipus/lista'"
                    class="bg-gray-500 hover:bg-gray-600 text-white py-2 px-6 rounded-md font-medium transition-colors">
                    Cancelar
                </button>
            </div>
        </form>

        <div id="mensaje" class="mt-6 p-4 rounded-md hidden"></div>

        <!-- Quipus recién registrados -->
        <div id="quipus-recientes" class="mt-8 hidden">
            <h3 class="text-lg font-medium text-gray-800 mb-4">Quipus Registrados Recientemente</h3>
            <div class="bg-gray-50 rounded-lg p-4">
                <div class="overflow-x-auto">
                    <table class="min-w-full text-sm">
                        <thead>
                            <tr class="bg-gray-100">
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Código</th>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Estado</th>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Fecha</th>
                            </tr>
                        </thead>
                        <tbody id="lista-recientes">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let quipusRegistrados = [];

    document.addEventListener('DOMContentLoaded', async function () {
        document.getElementById('codigo').addEventListener('input', formatCodigo);
    });

    const formatCodigo = () => {
        const codigo = document.getElementById('codigo');
        codigo.value = codigo.value.replace(/[^0-9]/g, '');
    };

    document.getElementById('form-quipus').addEventListener('submit', async function (e) {
        e.preventDefault();
        const codigo = document.getElementById('codigo');

        const mensaje = document.getElementById('mensaje');

        // Limpiar mensaje anterior
        mensaje.classList.add('hidden');
        // Validar formato
        if (codigo.value.length !== 5) {
            mostrarMensaje('error', 'El código debe tener 5 dígitos');
            return;
        }

        try {
            const response = await fetch('/api/quipus/registrar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ codigo: codigo.value })
            });

            const data = await response.json();

            if (response.ok) {
                mostrarMensaje('success', data.mensaje);

                // Agregar a la lista d
                quipusRegistrados.unshift({
                    codigo: codigo.value,
                    estado: 'disponible',
                    fecha: new Date().toLocaleString()
                });

                actualizarListaRecientes();
                this.reset();

                // Mostrar sección de recientes si hay elementos
                if (quipusRegistrados.length > 0) {
                    document.getElementById('quipus-recientes').classList.remove('hidden');
                }
            } else {
                mostrarMensaje('error', data.error);
            }
        } catch (error) {
            console.error('Error:', error);
            mostrarMensaje('error', 'Error de conexión. Intenta nuevamente.');
        }
    });

    function mostrarMensaje(tipo, texto) {
        const mensaje = document.getElementById('mensaje');
        mensaje.textContent = texto;
        mensaje.className = 'mt-6 p-4 rounded-md';

        if (tipo === 'success') {
            mensaje.classList.add('bg-green-100', 'border', 'border-green-400', 'text-green-700');
        } else {
            mensaje.classList.add('bg-red-100', 'border', 'border-red-400', 'text-red-700');
        }

        mensaje.classList.remove('hidden');

        // Auto-ocultar mensajes de éxito después de 5 segundos
        if (tipo === 'success') {
            setTimeout(() => {
                mensaje.classList.add('hidden');
            }, 5000);
        }
    }

    function actualizarListaRecientes() {
        const tbody = document.getElementById('lista-recientes');
        tbody.innerHTML = '';

        // Mostrar solo los últimos 5
        const ultimos = quipusRegistrados.slice(0, 5);

        ultimos.forEach(quipu => {
            const row = document.createElement('tr');
            row.className = 'border-b';
            row.innerHTML = `
                <td class="px-3 py-2 text-gray-900 font-medium">${quipu.codigo}</td>
                <td class="px-3 py-2">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                        ${quipu.estado}
                    </span>
                </td>
                <td class="px-3 py-2 text-gray-600">${quipu.fecha}</td>
            `;
            tbody.appendChild(row);
        });
    }

    // Auto-enfocar el campo de código
    document.getElementById('codigo').focus();
</script>