<% layout=false; %>

    <!DOCTYPE html>
    <html lang="es">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Login - Sistema Quipus</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="icon" href="/logo.png">
    </head>

    <body class="bg-gradient-to-br from-red-500 to-red-700 min-h-screen flex items-center justify-center p-4">

        <!-- Fondo con logo -->
        <div class="absolute inset-0 bg-[url('/logo.png')] bg-repeat opacity-10" style="background-size: 150px;"></div>

        <div class="relative z-10 w-full max-w-md">
            <!-- Tarjeta de Login -->
            <div class="bg-white rounded-2xl shadow-2xl p-8">
                <!-- Logo y título -->
                <div class="text-center mb-8">
                    <img src="/logo.png" alt="Logo"
                        class="w-24 h-24 mx-auto mb-4 rounded-full bg-white p-2 border-4 border-red-100">
                    <h1 class="text-3xl font-bold text-gray-800">Sistema Quipus</h1>
                    <p class="text-gray-600 mt-2">Acceso Administrativo</p>
                </div>

                <!-- Formulario de Login -->
                <form id="loginForm" class="space-y-6">
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-2">Usuario</label>
                        <input type="text" id="username" required placeholder="Ingresa tu usuario"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-2">Contraseña</label>
                        <input type="password" id="contrasenia" required placeholder="Ingresa tu contraseña"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all">
                    </div>

                    <button type="submit"
                        class="w-full bg-red-600 hover:bg-red-700 text-white py-3 rounded-lg font-semibold focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-all transform hover:scale-[1.02]">
                        Iniciar Sesión
                    </button>
                </form>

                <!-- Mensaje de error -->
                <div id="mensajeError"
                    class="mt-4 p-3 bg-red-100 border border-red-400 rounded-lg text-red-700 text-sm hidden"></div>

                <!-- Información del sistema -->
                <div class="mt-6 p-4 bg-gray-50 rounded-lg border">
                    <p class="text-gray-600 text-sm text-center">
                        <strong>Sistema de Préstamos Quipus</strong><br>
                        Acceso restringido para personal autorizado
                    </p>
                </div>
            </div>
        </div>

        <script>
            // Función para manejar el login
            async function handleLogin(event) {
                event.preventDefault();

                const username = document.getElementById('username').value;
                const contrasenia = document.getElementById('contrasenia').value;
                const mensajeError = document.getElementById('mensajeError');

                // Limpiar mensajes anteriores
                mensajeError.classList.add('hidden');

                try {
                    const response = await fetch('/admin/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ username, contrasenia })
                    });

                    const data = await response.json();

                    if (response.ok && data.success) {
                        // Redirigir al dashboard
                        window.location.href = '/admin/dashboard';
                    } else {
                        // Mostrar error
                        mensajeError.textContent = data.error || 'Credenciales incorrectas';
                        mensajeError.classList.remove('hidden');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    mensajeError.textContent = 'Error de conexión. Intenta nuevamente.';
                    mensajeError.classList.remove('hidden');
                }
            }

            // Event listeners
            document.getElementById('loginForm').addEventListener('submit', handleLogin);
        </script>
    </body>

    </html>